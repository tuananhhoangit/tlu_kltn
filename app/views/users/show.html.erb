<%= provide :title, @user.name %>
<div class="container">
  <div class="row">
    <div class="col-md-9">
      <div class="row profile">
        <div class="col-md-4 profile-pic">
          <%= image_tag @user.avatar, alt: @user.name %>
        </div>
        <div class="col-md-8 profile-info">
          <div class="line name">
            <%= @user.name %>
            <% if can? :update, @user %>
              <%= link_to t(".edit_profile"), edit_user_registration_path %>
            <% end %>
          </div>
          <div class="follow-act-form">
            <%= render "follow_form", user: @user if user_signed_in? %>
          </div>
          <div class="line email"><%= @user.email %></div>
          <section class="stats">
            <%= render "shared/stats" %>
          </section>
        </div>
      </div>

      <% if can? :create, @post %>
        <div class="new-post-form">
          <div class="create-post">
            <i class="glyphicon glyphicon-pencil"></i>
            <span><%= t ".create_post" %></span>
          </div>
          <%= render "posts/post_form", post: @post %>
        </div>
      <% end %>

      <ul class="main">
        <% if @user.posts.any? %>
          <%= render @posts, user: @user %>
          <%= will_paginate @posts %>
          <%= render partial: "posts/edit_post_form", collection: @edit_post_forms %>
        <% end %>
      </ul>
    </div>
  </div>
</div>
