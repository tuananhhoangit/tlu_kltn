<% provide :title, t(".edit_user") %>
<div class="banner banner-edit">
  <div class="container">
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <h2><% t ".edit" %><%= resource_name.to_s.humanize %></h2>

        <%= form_for resource, as: resource_name,
          url: registration_path(resource_name),
          html: {method: :put, class: "user"} do |f| %>
          <%= devise_error_messages! %>

          <div class="field">
            <%= f.label :name, t(".name") %>
            <%= f.text_field :name, autofocus: true %>
          </div>

          <div class="field">
            <%= f.label :password, t(".password") %> <i>(<%= t ".blank_pass" %>)</i>
            <%= f.password_field :password, autocomplete: "off",
              placeholder: t(".min_char") %>
          </div>

          <div class="field">
            <%= f.label :password_confirmation, t("password_confirmation") %>
            <%= f.password_field :password_confirmation, autocomplete: "off" %>
          </div>

          <div class="field">
            <%= f.label :current_password, t(".current_password") %>
            <i>(<%= t ".pass_to_confirm" %>)</i>
            <%= f.password_field :current_password, autocomplete: "off" %>
          </div>

          <div class="avatar">
            <%= f.label "", t(".profile_picture") %>
            <div class="picture">
              <%= image_tag resource.avatar, alt: resource.name %>
              <%= f.label :avatar, t(".change_picture"), class: "change-btn" %>
              <%= f.file_field :avatar %>
            </div>
          </div>
          <div class="actions">
            <%= f.submit t(".update"), class: "bt" %>
            <%= link_to t(".back"), :back %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
